extends layout

block content
  h2 login
  form.login(name='login', action='login', method='post', accept-charset='utf-8')
    .form-group
      label(for='username') email
      input.form-control(type='email', name='email', placeholder='yourname@email.com', required='')
    .form-group
      label(for='password') password
      input.form-control(type='password', name='password', placeholder='password', required='')
    button(type='submit' class='btn btn-default') login


